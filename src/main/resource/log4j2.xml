<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Appenders>
		<Console name="console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p %c{1}(%F:%L) - %m%n" />
		</Console>

		<RollingFile name="fixedTimeFileAppender" fileName="../logs/spark-poc.log"
			filePattern="../logs/spark-poc.log.%d{yyyy-MM-dd_HH}-%i">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} %-5p %c{1}(%L) - %m%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="200 MB" />
			</Policies>
			<DefaultRolloverStrategy max="1" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<AsyncLogger name="my" level="info" additivity="false"
			includeLocation="true">
			<AppenderRef ref="fixedTimeFileAppender" />
			<AppenderRef ref="console" />
		</AsyncLogger>

		<Root level="info">
			<AppenderRef ref="fixedTimeFileAppender" />
			<AppenderRef ref="console" />
		</Root>
	</Loggers>
</Configuration>
