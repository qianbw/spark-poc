<?xml version="1.0" encoding="GB2312" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="appender.all" class="org.apache.log4j.RollingFileAppender">
		<!-- 设置通道ID:org.zblog.all和输出方式：org.apache.log4j.RollingFileAppender -->
		<param name="File" value="spark-poc.log" /> <!-- 设置File参数：日志输出文件名 -->
		<param name="Append" value="false" /> <!-- 设置是否在重新启动服务时，在原有日志的基础添加新日志 -->
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} [%c]-[%p]-[%L] %m%n" /> <!-- 设置输出文件项目和格式 -->
		</layout>
	</appender>
	
	<appender name="appender.my" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="spark-poc.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="10240" /> <!-- 设置文件大小 -->
		<param name="MaxBackupIndex" value="10" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%p (%c:%L)- %m%n" />
		</layout>
	</appender>
	
	<logger name="my"> <!-- 设置域名限制，即zcw.log域及以下的日志均输出到下面对应的通道中 -->
		<level value="debug" /> <!-- 设置级别 -->
		<appender-ref ref="appender.my" /> <!-- 与前面的通道id相对应 -->
	</logger>
	
	<root> <!-- 设置接收所有输出的通道 -->
		<appender-ref ref="appender.all" /> <!-- 与前面的通道id相对应 -->
	</root>
</log4j:configuration>